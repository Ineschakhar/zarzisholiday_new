{% extends 'userbase.html.twig' %}

{% block title %}
	{{ app.user.nom  }}
	Profile
{% endblock %}

{% block body %}
	<SCRIPT language="JavaScript" type="text/javascript">
		function openWin(windowURL, windowName, windowFeatures) {
window.open(windowURL, windowName, windowFeatures);
}
	</SCRIPT>
	<!-- Subintro
	================================================== -->
	<section id="subintro">
		<div class="container">
			<div class="row">
				<div class="span8">
					<ul class="breadcrumb">
						<li>
							<a href="#">
								<i class="icon-home"></i>
							</a>
							<i class="icon-angle-right"></i>
						</li>
						<li>
							<a href="#">Blog</a>
							<i class="icon-angle-right"></i>
						</li>
						<li class="active">Blog with left sidebar</li>
					</ul>
				</div>
				<div class="span4">
					<div class="search">
						<form class="input-append">
							<input class="search-form" id="appendedPrependedInput" type="text" placeholder="Search here.."/>
							<button class="btn btn-dark" type="submit">Search</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</section>
	<section id="maincontent">
		<div class="container">
			<div class="row"> 

				<div
					class="span8">
					<!-- start article 1 -->
					<article class="blog-post">
						<div class="post-heading">
							<h3>
								<a href="#">User Appartement List</a>
							</h3>
							<a href="{{ path('user_appartement_new') }}" class="btn btn-block btn-success">Add New appartement</a>
						</div>
						<div class="row">
							<div class="span8">

								<table class="table">
									<thead>
										<tr>
											<th>Id</th>
											<th>Title</th>
											<th>Image</th>
											<th>Star</th>

											<th>City</th>
											<th>Phone</th>
											<th>Email</th>
											<th>Country</th>

											<th>I.Gallery</th>
											<th>Status</th>

										</tr>
									</thead>
									<tbody>
{% for appartement in appartements %}

											<tr>
												<td>{{ appartement.id }}</td>
												<td nowrap>{{ appartement.title }}</td>
												<td>
													<img src="{{ asset('uploads/' ~ appartement.image) }}" height="40">
												</td>
												<td>{{ appartement.star }}</td>

												<td>{{ appartement.city }}</td>
												<td>{{ appartement.phone }}</td>
												<td>{{ appartement.email }}</td>

												<td>{{ appartement.country }}</td>

												<td>
													<a href="javascript:openWin('{{ path('admin_image_new', {'id': appartement.id}) }}','','toolbar=no,location=no,directories=0,status=no,top=50,left=100,menuBar=no,scrollBars=yes,resizable=no,width=900,height=600');">
														<img src="{{ asset('assets/admin/img') }}/gallery.png" height="40">
													</a>
												</td>

												<td>{{ appartement.status }}</td>

												<td>
													<a href="{{ path('admin_appartement_show', {'id': appartement.id}) }}" class="btn btn-block btn-info">Show</a>
												</td>
												<td>
													<a href="{{ path('admin_appartement_edit', {'id': appartement.id}) }}" class="btn btn-block btn-info">Edit</a>
												</td>
												<td>
													{{ include('admin/appartement/_delete_form.html.twig') }}
												</td>
											</tr>
										{% else %}
											<tr>
												<td colspan="17">no records found</td>
											</tr>
										{% endfor %}
									</tbody>
								</table>

							</div>
						</div>
					</article>
					<!-- end article 1 -->

				</div>
			</div>
		</div>
	</section>

{% endblock %}

