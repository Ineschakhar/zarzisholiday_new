 {% extends 'userbase.html.twig' %}

 {% block title %}Hello User Controller!
 {% endblock %}

 {% block body %}

 <body
     class="page-header-fixed sidemenu-closed-hidelogo page-content-white page-md header-white dark-sidebar-color logo-dark">
     <!-- start page content -->
     <div class="page-content-wrapper">
         <div class="page-content">



 <section id="maincontent">
     <div class="container">
         <div class="row">

             <div class="span9">
                 <!-- start article 1 -->
                 <article class="blog-post">
                     <div class="post-heading">
                         <h3>
                             <a href="#">User Comments List</a>
                         </h3>
                     </div>
                     <div class="row">


                         <table class="table">
                             <thead>
                                 <tr>

                                     <th>Subject</th>
                                     <th>Comment</th>
                                     <th>Status</th>
                                     <th>Hotel</th>
                                     <th>Created_at</th>
                                     <th>Rate</th>
                                     <th>actions</th>
                                 </tr>
                             </thead>
                             <tbody>
                                 {% for comment in comments %}
                                 <tr>

                                     <td>{{ comment.subject }}</td>
                                     <td>{{ comment.comment }}</td>
                                     <td>{{ comment.status }}</td>
                                     <td nowrap>
                                         <a
                                             href="{{ path('hotel_show', {'id': comment.appartementid}) }}">{{ comment.title }}</a>
                                     </td>
                                     <td>{{ comment.created_at }}</td>
                                     <td>{{ comment.rate }}</td>
                                     <td>
                                         <a href="" class="btn btn-danger">Delete</a>
                                     </td>
                                 </tr>
                                 {% else %}
                                 <tr>
                                     <td colspan="10">no records found</td>
                                 </tr>
                                 {% endfor %}
                             </tbody>
                         </table>


                     </div>
                 </article>
                 <!-- end article 1 -->

             </div>
         </div>
     </div>
 </section>
      </div>
     </div>
     <!-- end page content -->
 </body>


 {% endblock %}
